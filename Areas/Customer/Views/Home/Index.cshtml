@model List<Book>

    <div class="row">
        @foreach(var eachBook in Model)
        {
        <div class="col-3 mb-5">
            <div class="card col-12 m-2 p-2 border-2 shadow border-rounded" style="min-height:100%">
                <img class="card-img-top"/>
                <h3 class="card-title"> @eachBook.BookTitle </h3>
                <div class="card-body">
                    <p class="card-text text-center ">
                        @eachBook.Author
                        @eachBook.Description
                        @eachBook.Price

                    </p>
                </div>

                <a asp-controller="Home" asp-action="Details" asp-route-id="@eachBook.BookId" class="btn btn-primary">Details</a>

            </div>

         </div>
    } 
</div>