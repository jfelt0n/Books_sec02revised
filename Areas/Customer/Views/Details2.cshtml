@model Book


<form method="post">
    <div class="row m-5 border-2 shadow border-rounded">
        <div class="card text-center">
            <div class="row m-3">
                <div class="col-12 bg-primary rounded py-2 mb-3">
                    <p class="card-title h1 text-white text-opacity-75">
                        @Model.BookTitle
                    </p>
                </div>
                <div class="col-6">
                    <p class="card-text text-warning h3" >
                        by @Model.Author
                    </p>

                    <p class="card-text text-start">
                        @Model.Description
                    </p>

                    <p class="card-text">
                        Price: @Model.Price
                    </p>
                </div>

            </div>
        </div>
    </div>

</form>